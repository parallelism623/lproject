{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "AspNetCore.Diagnostics.HealthChecks": "Trace",
      "HealthChecks.UI.WebHooks": "Trace"
    }
  },
  "AllowedHosts": "*",
  
  "HealthChecksUI": {
    "HealthChecks": [
      {
        "Name": "HTTP-Api-Basic",
        "Uri": "https://localhost:6263/healthz"
      }
    ],
    "Webhooks": [
      {
        "Name": "Slack",
        "Uri": "abc2341123",
        "Payload": "{\"text\":\"*:rotating_light: HEALTH CHECK ALERT*\",\"channel\":\"#general\",\"link_names\":1,\"username\":\"health-monitor\",\"icon_emoji\":\":heartpulse:\",\"attachments\":[{\"color\":\"#ff0000\",\"fields\":[{\"title\":\"Check\",\"value\":\"[[LIVENESS]]\",\"short\":true},{\"title\":\"Status\",\"value\":\"FAILED\",\"short\":true}],\"text\":\"*Reason:*\\n\\n```[[FAILURE]]```\",\"footer\":\"<http://yourappstatus|View Health Dashboard>\"}]}",
        "RestoredPayload": "{\"text\":\"*:white_check_mark: HEALTH CHECK RECOVERED*\",\"channel\":\"#general\",\"link_names\":1,\"username\":\"health-monitor\",\"icon_emoji\":\":heartpulse:\",\"attachments\":[{\"color\":\"#36a64f\",\"fields\":[{\"title\":\"Check\",\"value\":\"[[LIVENESS]]\",\"short\":true},{\"title\":\"Status\",\"value\":\"OK\",\"short\":true}],\"text\":\"All systems operational again. :tada:\"}]}"
      }
    ],
    "EvaluationTimeInSeconds": 10
  }
  
}
